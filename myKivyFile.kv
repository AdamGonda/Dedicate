#:kivy 1.0
<AnswerButton>:
    font_size: 30

<MenuButton@Button>:
    size_hint: 0.5, 0.3
    

<CollectionSelectScreen>:
    




<MainScreen>:
    BoxLayout:
        
        orientation: "vertical"
        pos_hint:{"x": 0.25, "y": 0}
        MenuButton:
            text: 'Goto QA'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'CollectionSelectScreen'
                
            

        MenuButton:
            text: 'Stats'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'WinScreen'
        
        MenuButton:
            text: 'Store'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'WinScreen'
                
        MenuButton:
            text: 'Quit'
            on_press:
                app.stop()

<CollectionSelectScreen>:
    BoxLayout:
        id: btn_container
        orientation: "vertical"
        size_hint: 0.6, 1
        pos_hint: {"center_x":0.5, "center_y":0.5}
    

<QAScreen>:
    
    BoxLayout:
        
        orientation: "vertical"
        BoxLayout:
            orientation: "vertical"
            size_hint: 1, 0.6
            BoxLayout:
                size_hint: 1, 0.1
                Button:
                    on_press:
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'MainScreen'
                    font_size: 30
                    size_hint: 0.3, 1
                    Image:
                        source: "./Arrow_white.png"
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                    
                Label:
                    id: TimerLabel
                    text: root.time_prop
                    font_size: 30
                    size_hint: 0.5, 1


                
                BoxLayout:
                    size_hint: 0.5, 1

                    Label:
                        text:""
                        
                    Label:
                        id: LivesLable
                        text: "Lives:"
                        font_size: 30
                        size_hint: (None, 1)
                
                    Label:
                        id: LivesNumber
                        text: root.lives_prop
                        font_size: 30
                        size_hint: (None, 1)
                        
                        

                    Label:
                        text:""
                        
                                        
                    

                Button:
                    id: StartButtom
                    text: "Start"
                    font_size: 30
                    size_hint: 0.3, 1
                    on_press: root.on_start()
                    
                    
                    
            Label:
                id: Question
                text: root.currant_q_and_a[0]
                font_size: 30
                size_hint: 1, 0.9

                
            BoxLayout:
                size_hint: 1, 0.4
                AnswerButton:
                    id: A1 
                    text: root.currant_q_and_a[1]
                    font_size: 30
                    on_press: root.on_check_answer(self)
                    
                    
                
                AnswerButton:
                    id: A2 
                    text: root.currant_q_and_a[2]
                    font_size: 30
                    on_press: root.on_check_answer(self)
                    
            BoxLayout:
                size_hint: 1, 0.4
                AnswerButton:
                    id: A3 
                    text: root.currant_q_and_a[3]
                    font_size: 30
                    on_press: root.on_check_answer(self)

                AnswerButton:
                    id: A4 
                    text: root.currant_q_and_a[4]
                    font_size: 30
                    on_press: root.on_check_answer(self)



<WinScreen>:
    Label:
        text:"You won"

<LoseScreen>:
    Label:
        text:"You Lose"